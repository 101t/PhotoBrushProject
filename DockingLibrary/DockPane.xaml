<UserControl x:Class="DockingLibrary.DockPane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel>
		<DockPanel Name="panelHeader" Background="Gray" DockPanel.Dock="Top">
			<Button Name="btnClose" DockPanel.Dock="Right"	>x</Button>
			<Button Name="btnDock" DockPanel.Dock="Right"	>d</Button>
			<Button Name="btnPosDropDown" DockPanel.Dock="Right">></Button>
			<TextBlock Name="tbTitle"  VerticalAlignment="Center" ></TextBlock>
		</DockPanel>
		<ContentPresenter Name="windowContent"/>
    </DockPanel>
</UserControl>
